<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th scope="col">S.no</th>
      <th scope="col">Name</th>
      <th scope="col">Class</th>
      <th scope="col">No: of Questions</th>
      <th scope="col">Marks</th>
      <th scope="col">Date Created</th>
      <th scope="col">Options</th>
    </tr>
  </thead>
  <tbody>
    <% count = 0%>
    <% for i in Questionpaper.where(user_id: current_user.id)%>
      <% count = count + 1%>
      <tr>
        <th scope="row"><%= count%></th>
        <td><%= i.name %></td>
        <td></td>
        <td><%= i.number_of_questions %></td>
        <td></td>
        <td><%= i.created_at.to_date.to_formatted_s(:rfc822) %></td>
        <td> <%= link_to '<i class="bi bi-pencil ml-3"></i>'.html_safe, root_path %> 
            <%= link_to '<i class="bi bi-trash ml-3"></i>'.html_safe, root_path %>
        </td>
      </tr>
    <%end%>
  </tbody>
</table>