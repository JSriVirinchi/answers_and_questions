<%if Questionpaper.where(user_id: current_user.id).count > 0%>
  <div class="glassmorphism_6">
    
  </div>
  <table class="table table-striped gradient_background glassmorphism text-white mb-0">

    <thead>
      <tr>
        <th scope="col">S.no</th>
        <th scope="col">
          Name 
          <%= link_to'<i class="bi bi-arrow-up"></i>'.html_safe, home_list_of_questions_sort_path('name_asc'), class: 'white_link', id:'list_of_questions_sort_name_arrow_up_id', remote: true %> 
          <%= link_to'<i class="bi bi-arrow-down"></i>'.html_safe, home_list_of_questions_sort_path('name_desc'), class: 'white_link hide', id:'list_of_questions_sort_name_arrow_down_id',remote: true %> 
        </th>
        <th scope="col">Class</th>
        <th scope="col">
          No: of Questions
          <%= link_to'<i class="bi bi-arrow-up"></i>'.html_safe, home_list_of_questions_sort_path('no_of_questions_asc'), class: 'white_link', id:'list_of_questions_sort_no_of_questions_arrow_up_id', remote: true %> 
          <%= link_to'<i class="bi bi-arrow-down"></i>'.html_safe, home_list_of_questions_sort_path('no_of_questions_desc'), class: 'white_link hide', id:'list_of_questions_sort_no_of_questions_arrow_down_id',remote: true %> 
        </th>
        <th scope="col">
          Marks
          <%= link_to'<i class="bi bi-arrow-up"></i>'.html_safe, home_list_of_questions_sort_path('marks_asc'), class: 'white_link', id:'list_of_questions_sort_marks_arrow_up_id', remote: true %> 
          <%= link_to'<i class="bi bi-arrow-down"></i>'.html_safe, home_list_of_questions_sort_path('marks_desc'), class: 'white_link hide', id:'list_of_questions_sort_marks_arrow_down_id',remote: true %> 
        </th>
        <th scope="col">
          Date Created
          <%= link_to'<i class="bi bi-arrow-up"></i>'.html_safe, home_list_of_questions_sort_path('date_created_asc'), class: 'white_link hide', id:'list_of_questions_sort_date_created_arrow_up_id', remote: true %> 
          <%= link_to'<i class="bi bi-arrow-down"></i>'.html_safe, home_list_of_questions_sort_path('date_created_desc'), class: 'white_link', id:'list_of_questions_sort_date_created_arrow_down_id',remote: true %> 
        </th>
        <th scope="col">Options</th>
      </tr>
    </thead>

    <tbody>
      <% count = 0%>
      <% for i in pagination_questions%>
        <% count = (count + 1)%>
        <tr>
          <th scope="row">
            <%if count >number_of_questions_per_page && params[:page]%>
              <%= count + number_of_questions_per_page*(params[:page].to_i - 1) %>
            <%else%>
              <%= count %>
            <%end%>
          </th>
          <td><%= truncate(i.name, length: 25) %></td>
          <td></td>
          <td><%= i.number_of_questions %></td>
          <td><%= i.total_marks %></td>
          <td><%= i.created_at.to_date.to_formatted_s(:rfc822) %></td>
          <td> 
            <%= link_to '<i class="bi bi-pencil ml-3"></i>'.html_safe, home_question_paper_edit_page_path(i.id) %>

            <%= link_to '<i class="bi bi-trash ml-3"></i>'.html_safe, home_delete_question_paper_path(i.id), method: :delete, remote: true, data: { confirm: "Are you sure that you want to delete this question paper? "} %> 
              
          </td>
        </tr>
      <%end%>
    </tbody>
  </table>

  <div class="glassmorphism_2">
    <div class="digg_pagination container" style="overflow-x: auto; overflow-y: hidden;">
      <%= will_paginate pagination_questions, inner_window: 2, outer_window: 1%>
    </div>
  </div>

<%else%>
  <div class="glassmorphism_5 text-dark no_list_of_question_papers">
    <h2>There are no question papers to show.</h2>
    <h5> You can create a question paper by clicking the bule button on the top right.</h5>
  </div>
<%end%>