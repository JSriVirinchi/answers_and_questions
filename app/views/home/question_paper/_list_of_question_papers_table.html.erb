<table class="table table-striped gradient_background glassmorphism text-white mb-0">

  <thead>
    <tr>
      <th scope="col">S.no</th>
      <th scope="col">
        <span id="list_of_questions_table_colomn_name_attribute">Name</span>
      </th>
      <th scope="col">
        <span id="list_of_questions_table_colomn_class_attribute">Class</span>
      </th>
      <th scope="col">
        <span id="list_of_questions_table_colomn_no_of_questions_attribute">No: of Questions</span> 
      </th>
      <th scope="col">
        <span id="list_of_questions_table_colomn_marks_attribute"> Marks</span>
      </th>
      <th scope="col">
        <span id="list_of_questions_table_colomn_date_created_attribute" class="underline">Date Created</span> 
      </th>
      <th scope="col">Options</th>
    </tr>
  </thead>

  <tbody>
    <% count = 0%>
    <% for i in pagination_questions%>
      <% count = (count + 1)%>
      <tr>
        <th scope="row">
          <%if count >number_of_questions_per_page && params[:page]%>
            <%= count + number_of_questions_per_page*(params[:page].to_i - 1) %>
          <%else%>
            <%= count %>
          <%end%>
        </th>
        <td><%= truncate(i.name, length: 25) %></td>
        <td></td>
        <td><%= i.number_of_questions %></td>
        <td><%= i.total_marks %></td>
        <td><%= i.created_at.to_date.to_formatted_s(:rfc822) %></td>
        <td> 
          <%= link_to '<i class="bi bi-pencil ml-3"></i>'.html_safe, home_question_paper_edit_page_path(i.id) %>

          <%= link_to '<i class="bi bi-trash ml-3"></i>'.html_safe, home_delete_question_paper_path(i.id), method: :delete, remote: true, data: { confirm: "Are you sure that you want to delete this question paper? "} %> 
            
        </td>
      </tr>
    <%end%>
  </tbody>
</table>

