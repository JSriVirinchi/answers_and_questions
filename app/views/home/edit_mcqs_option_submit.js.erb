<% edit_mcqs_option_before = "edit_mcqs_option_before_" + @option.id.to_s %>
<% edit_mcqs_option_after = "edit_mcqs_option_after_" + @option.id.to_s %>
<% edit_mcqs_option_icons = "edit_mcqs_option_icons_" + @option.id.to_s %>
<% mcqs_partial_id = 'mcqs_partial_id_' + @question_id.to_s%>

document.getElementById('<%= edit_mcqs_option_before %>').classList.remove('hide');
document.getElementById('<%= edit_mcqs_option_after %>').classList.add('hide');
document.getElementById('<%= edit_mcqs_option_icons %>').classList.remove('hide');
document.getElementById('<%= mcqs_partial_id %>').innerHTML = "<%= j render 'home/question_paper/mcqs_partial',question_id: @question_id %>";