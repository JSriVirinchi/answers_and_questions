<!-- Button trigger modal -->

<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
  Create new Question Paper
</button>


  <!-- Modal -->
<%= form_with scope: :create_question_paper, url: home_create_question_paper_path, method: :post, remote: true do |f|%>
  <div class="modal fade" id="exampleModal" data-backdrop="static" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Question Paper details</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close" id="create_question_paper_close_icon">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">

          <div class="row mb-2">
            <div class="col-4">
              Name <span style="color: red"> * </span> :
            </div>
            <div class="col-8">
              <%= f.text_field :name, class: 'form-control' %>
            </div>              
          </div>  

          <div class="row">
            <div class="col-4">
              Default marks <span style="color: red"> * </span> :
            </div>
            <div class="col-8 mb-2">
              <%= f.number_field :default_marks, step: 0.125 , min: 0, class: 'form-control', value: 2 %>
            </div>
          </div>

          <div id="create_question_paper_error_messages" >
            <%= render 'home/question_paper/error_messages_for_modal'%>
          </div>

        </div>
        <div class="modal-footer">
          <!-- <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button> -->

          <%= f.submit 'Create', class: 'btn btn-primary'%>
        </div>
      </div>
    </div>
  </div>
<%end%>
