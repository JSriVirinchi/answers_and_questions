<% if @attribute == 'name_asc'%>
	<% @number_of_questions_per_page = 7%>
	<% @pagination_questions = Questionpaper.where(user_id: current_user.id).order('name ASC').paginate(page: params[:page], per_page: @number_of_questions_per_page)%>
	document.getElementById('list_of_question_papers').innerHTML = "<%= j render 'home/question_paper/list_of_question_papers', pagination_questions: @pagination_questions, number_of_questions_per_page: @number_of_questions_per_page %>";

	document.getElementById('list_of_questions_sort_name_arrow_up_id').classList.add('hide');
	document.getElementById('list_of_questions_sort_name_arrow_down_id').classList.remove('hide');

